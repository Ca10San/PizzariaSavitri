{
    "module": "order",
    "unicon": "book-open",
    "route": true,
    "report": false,
    "presets": [
      "crud"
    ],
    "fields": {
      "customer": {
        "label": "Cliente",
        "type": "text",
        "readonly": true,
        "values": [{
            "__query": {
                "module": "customer",
                "index": [ "name" ]
            }
        }]
      },
      "address": {
        "label": "Endere√ßo",
        "type": "text",
        "required": true
      },
      "pizza": {
        "label": "Pizza",
        "type": "text",
        "readonly": true,
        "values": [{
            "__query": {
                "module": "pizza",
                "index": [ 
                    "name", 
                    "price_small"  
                ]
            }
        }]
      },
      "beverage":{
        "label":"Bebida",
        "type":"text",
        "readonly": true,
        "values": [{
            "__query": {
                "module": "beverage",
                "index": [
                    "name",
                    "alcoholic",
                    "price"
                ]
            }
        }]
      },
      "order_datetime": {
        "label": "Hora do pedido",
        "type": "datetime",
        "readonly": true
      }
    }
  }